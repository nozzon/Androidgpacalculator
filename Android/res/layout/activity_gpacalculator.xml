<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GPACalculator" >

    <EditText
        android:id="@+id/ATextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/BTextField"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:ems="10" />

    <EditText
        android:id="@+id/BTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/CTextField"
        android:layout_below="@+id/ATextField"
        android:layout_marginTop="28dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/CTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BTextField"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:ems="10" />

    <EditText
        android:id="@+id/DTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/CTextField"
        android:layout_below="@+id/CTextField"
        android:layout_marginTop="16dp"
        android:ems="10" />

    <TextView
        android:id="@+id/GPAText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/labelF"
        android:layout_below="@+id/labelF"
        android:text="GPA" />

    <EditText
        android:id="@+id/FTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/DTextField"
        android:layout_below="@+id/DTextField"
        android:layout_marginTop="14dp"
        android:ems="10" />

    <TextView
        android:id="@+id/labelA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ATextField"
        android:layout_alignBottom="@+id/ATextField"
        android:layout_toLeftOf="@+id/ATextField"
        android:text="A" />

    <TextView
        android:id="@+id/labelB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/BTextField"
        android:layout_alignBottom="@+id/BTextField"
        android:layout_toLeftOf="@+id/BTextField"
        android:text="B" />

    <TextView
        android:id="@+id/labelC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/CTextField"
        android:layout_alignBottom="@+id/CTextField"
        android:layout_toLeftOf="@+id/CTextField"
        android:text="C" />

    <TextView
        android:id="@+id/labelD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/DTextField"
        android:layout_alignBottom="@+id/DTextField"
        android:layout_toLeftOf="@+id/DTextField"
        android:text="D" />

    <TextView
        android:id="@+id/labelF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/FTextField"
        android:layout_alignBottom="@+id/FTextField"
        android:layout_toLeftOf="@+id/FTextField"
        android:text="F" />

    <Button
        android:id="@+id/calculateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/FTextField"
        android:layout_marginRight="18dp"
        android:layout_marginTop="22dp"
        android:text="Calculate" />

</RelativeLayout>
